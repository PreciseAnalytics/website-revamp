{
  "framework": "nextjs",

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ],

  "routes": [
    { "src": "^/home/?$", "status": 308, "headers": { "Location": "/" } },

    { "src": "^/contact-us/?$", "status": 308, "headers": { "Location": "/contact" } },
    { "src": "^/request-quote/?$", "status": 308, "headers": { "Location": "/contact" } },

    { "src": "^/data-visualization/?$", "status": 308, "headers": { "Location": "/services" } },
    { "src": "^/predictive-analysis/?$", "status": 308, "headers": { "Location": "/services" } },
    { "src": "^/technology/?$", "status": 308, "headers": { "Location": "/services" } },

    { "src": "^/manufacturing/?$", "status": 308, "headers": { "Location": "/sectors/manufacturing" } }
  ]
}
